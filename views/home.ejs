<%- include('partials/header') %>
<div class="main-wrapper">
  <div class="section hero scroll">
    <div class="container hero-section w-container">
      <div class="global-content-padding margin-bottom gradient-yellow">
        <div class="hero-container other-pages">
          <h1>Work</h1>
          <div class="w-dyn-list">
            <div role="list" class="buttons-wrapper w-dyn-items">
              <div role="listitem" class="w-dyn-item category">
                <a href="#" class="button category show-all selected">All</a>
              </div>
              <div role="listitem" class="w-dyn-item category">
                <a
                  href="/project-categories/art-direction"
                  class="button category ad"
                  >Art Direction</a
                >
              </div>
              <div role="listitem" class="w-dyn-item category">
                <a href="/project-categories/ui-ux" class="button category uiux"
                  >UI/UX</a
                >
              </div>
              <div role="listitem" class="w-dyn-item category">
                <a
                  href="/project-categories/graphic-design"
                  class="button category gd"
                  >Graphic Design</a
                >
              </div>
              <div role="listitem" class="w-dyn-item category show-all">
                <a
                  href="/project-categories/web-design"
                  class="button category wd"
                >
                  Web Design
                </a>
              </div>
            </div>
          </div>

          <div
            class="buttons-wrapper subcategory gd-subcategory"
            style="display: none"
          >
            <a
              href="/project-categories/graphic-design"
              class="button category gd"
            >
              GD-1
            </a>
            <a
              href="/project-categories/graphic-design"
              class="button category gd"
            >
              GD-2
            </a>
            <a
              href="/project-categories/graphic-design"
              class="button category gd"
            >
              GD-3
            </a>
          </div>
          <div
            class="buttons-wrapper subcategory wd-subcategory"
            style="display: none"
          >
            <a href="/project-categories/web-design" class="button category wd">
              E-Commerce
            </a>
            <a href="/project-categories/web-design" class="button category wd">
              Food Delivery
            </a>
            <a href="/project-categories/web-design" class="button category wd">
              Social Media
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="section no-padding-top page-load-animation">
    <div class="container w-container">
      <div class="projects-collection-list w-dyn-list">
        <div role="list" class="grid w-dyn-items">
          <% for(let i=0; i < data.length; i++) { %>
          <div
            role="listitem"
            class="project-item global-content-padding w-dyn-item"
          >
            <a
              href="/projects/<%=data[i].name%>"
              class="link-block w-inline-block"
              ><img
                src="data:image/<%=data[i].image.contentType%>;base64,
                    <%=data[i].image.data.toString('base64')%>"
                loading="lazy"
                alt=""
                sizes="(max-width: 479px) 88vw, (max-width: 767px) 93vw, (max-width: 991px) 43vw, 42vw"
                srcset="
                  images/63d40558f3324d7d1eb5f530_Unbuilt_4-p-500.jpg   500w,
                  images/63d40558f3324d7d1eb5f530_Unbuilt_4-p-800.jpg   800w,
                  images/63d40558f3324d7d1eb5f530_Unbuilt_4-p-1080.jpg 1080w,
                  images/63d40558f3324d7d1eb5f530_Unbuilt_4-p-1600.jpg 1600w,
                  images/63d40558f3324d7d1eb5f530_Unbuilt_4.jpg        2000w
                "
                class="project-image"
            /></a>
            <div class="project-description-wrapper">
              <div class="project-title-description-wrapper">
                <a
                  href="/projects/<%=data[i].name%>"
                  class="link-block w-inline-block"
                >
                  <h2><%= data[i].name %></h2>
                </a>
                <div class="tags-wrapper">
                  <div class="project-journal-tags-collection-list w-dyn-list">
                    <div role="list" class="buttons-wrapper w-dyn-items">
                      <% for(let j=0; j < data[i].categories.length; j++) { %>
                      <div
                        role="listitem"
                        class="project-journal-tags-item w-dyn-item category"
                      >
                        <a
                          href="/project-categories/<%= data[i].categories[j] %>"
                          class="button"
                          ><%= data[i].categories[j] %></a
                        >
                      </div>
                      <% } %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% } %>
        </div>
      </div>
      <div class="link-block w-inline-block">
        <div
          class="global-content-padding big-padding gradient-purple-center animate-gradient"
        >
          <div>
            <ul class="pagination justify-content-center">
              <% if (hasPreviousPage) { %>
              <li class="page-item">
                <a class="page-link" href="?page=1">First Page</a>
              </li>
              <li class="page-item">
                <a class="page-link" href="?page=<%= previousPage %>"
                  ><%= previousPage %></a
                >
              </li>
              <% } %>
              <li class="page-item active">
                <a class="page-link" href="?page=<%= currentPage %>"
                  ><%= currentPage %></a
                >
              </li>
              <% if (hasNextPage) { %>
              <li class="page-item">
                <a class="page-link" href="?page=<%= nextPage %>"
                  ><%= nextPage %></a
                >
              </li>
              <li class="page-item">
                <a class="page-link" href="?page=<%= lastPage %>">Last Page</a>
              </li>
              <% } %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include('partials/footer') %>
</div>
