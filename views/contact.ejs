<%- include('partials/header') %>
<div class="main-wrapper">
    <div class="section hero yx-section">
      <div class="container hero-section y-container">
        <div class="global-content-padding margin-bottom gradient-blue">
          <div class="hero-container other-pages">
            <h1>Contact</h1>
          </div>
        </div>
      </div>
    </div>
    <div class="section no-padding-top yx-section">
      <div class="container y-container">
        <div class="global-content-padding margin-bottom">
          <div class="y-layout-grid grid">
            <div  class="grid-block">
              <div class="text-size-big text-color-grey">Email</div>
            </div>
            <div  class="grid-block">
              <div class="y-form">
                <form id="Contact-form" name="yx-form-Contact-form" data-name="Contact form" class="form-block" action="/submit-form" method="post">
                    <label for="name">Name</label>
                    <input type="text" class="text-input y-input" maxlength="256" name="Name" data-name="Name" placeholder="" id="name"/>
                    <label for="email">Email Address</label>
                    <input type="email" class="text-input y-input" maxlength="256" name="Email-Address"
                    data-name="Email Address" placeholder="" id="email" required/>
                    <label for="message">Message</label>
                    <textarea name="Message" maxlength="5000" data-name="Message"
                    placeholder="" id="message" class="text-area y-input"></textarea>
                    <div class="spacer _15"></div>
                    <script src="https://challenges.cloudflare.com/turnstile/v0/api.js?render=<%= siteKey %>"></script>
<div class="cf-turnstile" data-sitekey="<%= siteKey %>"></div>
<div class="spacer _15"></div>
                  <input type="submit" value="Send message" data-wait="Sending it"
                    class="button y-button">
                </form>
                <div id="successMessage" class="success-message y-form-done"  style="display: none;">
                  <div>Thank you! Your submission has been received!</div>
                </div>
               
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="section yx-section">
      <div class="container y-container">
        <div class="global-content-padding">
          <div class="y-layout-grid grid">
            <div id="y-node-_5de1d822-51f9-f201-32d0-ac0e8d664209-2056c866" class="grid-block">
              <div class="text-size-big text-color-grey">Social Media</div>
            </div>
            <div id="y-node-_5de1d822-51f9-f201-32d0-ac0e8d66420c-2056c866" class="grid-block"><a
                href="http://www.instagram.com" target="_blank" class="no-decoration-link all-width">Instagram</a><a
                href="http://www.linkedin.com" target="_blank" class="no-decoration-link all-width">LinkedIn</a><a
                href="http://www.behance.com" target="_blank" class="no-decoration-link all-width">Behance</a><a
                href="http://www.dribbble.com" target="_blank" class="no-decoration-link all-width">Dribbble</a></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script>
    document.getElementById('Contact-form').addEventListener('submit', async function (event) {
      event.preventDefault();
  
      const name = document.getElementById('name').value;
      const email = document.getElementById('email').value;
      const message = document.getElementById('message').value;
      // Assuming the CAPTCHA response token is automatically included by Cloudflare's Turnstile in a hidden input field within the form.
      // If not, you'd need to ensure it's captured here similarly to name, email, and message.
      const token = document.querySelector('[name="cf-turnstile-response"]').value;
  
      try {
        const response = await fetch('/submit-form', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            'cf-turnstile-response': token, // Include the CAPTCHA response token in the request
            name: name,
            email: email,
            message: message,
          }),
        });
  
        const data = await response.json();
  
        if (response.ok) {
          // Assuming the backend responds with JSON containing { success: true } upon successful email sending
          if (data.success) {
            document.getElementById('successMessage').style.display = 'block';
            // Assuming you have an element with id='errorMessage' for displaying error messages
            document.getElementById('errorMessage').style.display = 'none';
            document.getElementById('Contact-form').reset();
          } else {
            // Handle the case where CAPTCHA was verified but email sending failed for some reason
            console.error('Email sending failed:', data.error);
          }
        } else {
          console.error('Error:', data.error);
          // Show an error message to the user
          document.getElementById('errorMessage').style.display = 'block';
          document.getElementById('successMessage').style.display = 'none';
        }
      } catch (error) {
        console.error('An unexpected error occurred:', error);
        // Show a generic error message to the user
        document.getElementById('errorMessage').style.display = 'block';
        document.getElementById('successMessage').style.display = 'none';
      }
    });
  </script>
  <%- include('partials/footer') %>

